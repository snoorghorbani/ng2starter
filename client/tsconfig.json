{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "enableIvy": false
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@soushians/*": [
        "dist/@soushians/*"
        // "projects/soushians/*/src/public_api"
      ],
      "@soushians/test": [
        "dist/soushians/test"
      ],
      "configs": [
        "projects/configs/src/public_api"
      ],
      "socket.io-client": [
        "./node_modules/socket.io-client/dist/socket.io.slim.js"
      ]
    }
  }
}