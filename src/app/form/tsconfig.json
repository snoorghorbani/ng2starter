{
	"$schema":"http://json.schemastore.org/tsconfig",
	"compilerOptions": {
	  "noImplicitAny": false,
	  "module": "commonjs",
	  "target": "ES5",
	  "emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"stripInternal": true,
	  "sourceMap": true,
		"outDir": "../lib",
	  "declaration": true,
		"typeRoots": ["node_modules/@types"],
		"types": ["node"],
		"lib": ["es2015", "dom"],
		"skipLibCheck": true
	},
	"include": [
	  "index.ts"
	],
	"exclude": [
	  "node_modules"
	],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}